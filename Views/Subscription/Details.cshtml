@model MaksGym.Models.ViewModels.SubscriptionDetailViewModels

@{
    ViewData["Title"] = "Деталі абонемента";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9 col-sm-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-info text-white text-center">
                    <h3 class="mb-0">Деталі абонемента</h3>
                </div>
                <div class="card-body p-4">

                    <div class="mb-4">
                        <h5><b>Назва абонемента:</b> @Model.CurrentSubscription.Name</h5>
                        <p><b>Термін дії:</b> @Model.CurrentSubscription.DurationInDays днів</p>
                        <p><b>Ціна за одне заняття:</b> @Model.CurrentSubscription.Price грн</p>
                    </div>

                    <hr />

                    <h5 class="mb-3">Редагувати підписку</h5>
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="CurrentSubscription.SubscriptionId" />

                        <div class="mb-3">
                            <label asp-for="CurrentSubscription.Name" class="form-label fw-bold">Назва абонемента</label>
                            <input asp-for="CurrentSubscription.Name" class="form-control" />
                            <span asp-validation-for="CurrentSubscription.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrentSubscription.DurationInDays" class="form-label fw-bold">Тривалість (дні)</label>
                            <input asp-for="CurrentSubscription.DurationInDays" type="number" class="form-control" />
                            <span asp-validation-for="CurrentSubscription.DurationInDays" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrentSubscription.Price" class="form-label fw-bold">Ціна за заняття</label>
                            <input asp-for="CurrentSubscription.Price" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="CurrentSubscription.Price" class="text-danger"></span>
                        </div>

                       

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-save"></i> Зберегти зміни
                            </button>
                            <a asp-action="Index" asp-controller="Subscription" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}