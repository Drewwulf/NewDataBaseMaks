@model MaksGym.Models.ViewModels.SubscriptionViewModel

@{
    ViewData["Title"] = "Додати підписку";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Додати абонемент</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Subscription" asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="subscription.Name" class="form-label fw-bold"></label>
                            <input asp-for="subscription.Name" class="form-control" placeholder="Введіть назву абонемента" />
                            <span asp-validation-for="subscription.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="subscription.Price" class="form-label fw-bold"></label>
                            <input asp-for="subscription.Price" class="form-control" placeholder="Введіть ціну" />
                            <span asp-validation-for="subscription.Price" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-plus-circle"></i> Додати
                            </button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

 
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h4 class="mb-0">Список абонементів</h4>
                </div>
                <div class="card-body p-3">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Назва</th>
                                    <th scope="col">Ціна</th>
                                    <th scope="col" class="text-center">Дії</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var subscription in Model.subscriptions)
                                {
                                    if (!subscription.IsDeleted)
                                    {
                                        <tr>
                                            <td>@subscription.SubscriptionId</td>
                                            <td>@subscription.Name</td>
                                            <td>@subscription.Price грн</td>
                                            <td class="text-center">
                                                <a asp-action="Delete" asp-route-id="@subscription.SubscriptionId"
                                                   class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i> Видалити
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
