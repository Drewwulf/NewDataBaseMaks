@model MaksGym.Models.ViewModels.SheduleViewModel

@{
    ViewData["Title"] = "Додати графік занять";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Додати графік занять</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="GroupId" />

                        <div class="mb-3">
                            <label asp-for="DayOfWeek" class="form-label fw-bold">День тижня</label>
                            <select asp-for="DayOfWeek" class="form-select"
                                    asp-items="Html.GetEnumSelectList<WeekDay>()">
                                <option value="">-- Виберіть день --</option>
                            </select>
                            <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label fw-bold">Час початку</label>
                            <input asp-for="StartTime" type="time" class="form-control" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndTime" class="form-label fw-bold">Час завершення</label>
                            <input asp-for="EndTime" type="time" class="form-control" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoomId" class="form-label fw-bold">Приміщення</label>
                            <select asp-for="RoomId" class="form-select">
                                <option value="">-- Виберіть зал --</option>
                                @foreach (var room in Model.Rooms)
                                {
                                    <option value="@room.RoomId">@room.RoomName</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-calendar-plus"></i> Додати
                            </button>
                            <a asp-controller="Group" asp-action="Details" asp-route-id="@Model.GroupId"
                               class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}