@{
    ViewData["Title"] = "Вхід";
}

<h2>Вхід</h2>

<form asp-action="Login" method="post">
    <div>
        <label>Номер телефону</label>
        <input type="text" name="phoneNumber" required />
    </div>
    <div>
        <label>Пароль</label>
        <input type="password" name="password" required />
    </div>
    <button type="submit">Увійти</button>
</form>
