@{
    ViewData["Title"] = "Вхід";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-4">Вхід</h3>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="phoneNumber" class="form-label">Номер телефону</label>
                <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" placeholder="+380..." required />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Пароль</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Введіть пароль" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Увійти</button>

            
        </form>
    </div>
</div>
