@model MaksGym.Models.ViewModels.DirectionViewModel

@{
    ViewData["Title"] = "Додати напрямок";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Додати напрямок</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="direction.DirectionName" class="form-label fw-bold"></label>
                            <input asp-for="direction.DirectionName" class="form-control" placeholder="Введіть назву напрямку" />
                            <span asp-validation-for="direction.DirectionName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="direction.DirectionDescription" class="form-label fw-bold"></label>
                            <textarea asp-for="direction.DirectionDescription" class="form-control" rows="3" placeholder="Опишіть напрямок"></textarea>
                            <span asp-validation-for="direction.DirectionDescription" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-plus-circle"></i> Додати
                            </button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Поле пошуку -->
    <div class="row mt-5 mb-3">
        <div class="col-md-6">
            <input type="text" id="searchDirection" class="form-control" placeholder="Пошук напрямку..." />
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h4 class="mb-0">Список напрямків</h4>
                </div>
                <div class="card-body p-3">
                    <div class="table-responsive">
                        <table id="directionsTable" class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Назва</th>
                                    <th scope="col">Опис</th>
                                    <th scope="col" class="text-center">Дії</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var direction in Model.directions)
                                {
                                    if (!direction.isDeleted)
                                    {
                                        <tr>
                                            <td>@direction.DirectionId</td>
                                            <td>@direction.DirectionName</td>
                                            <td>@direction.DirectionDescription</td>
                                           
                                            <td class="text-center">
                                                <a asp-action="Delete" asp-route-id="@direction.DirectionId"
                                                   class="btn btn-outline-danger btn-sm"
                                                   onclick="return confirm('Ви впевнені, що хочете видалити цей напрямок?');">
                                                    <i class="bi bi-trash"></i> Видалити
                                                </a>
                                                <a asp-action="Details" asp-route-id="@direction.DirectionId"
                                                   class="btn btn-outline-info btn-sm">
                                                    <i class="bi bi-info-circle"></i> Деталі
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("searchDirection").addEventListener("keyup", function () {
            let value = this.value.toLowerCase();
            let rows = document.querySelectorAll("#directionsTable tbody tr");

            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                row.style.display = text.includes(value) ? "" : "none";
            });
        });
    </script>
}
