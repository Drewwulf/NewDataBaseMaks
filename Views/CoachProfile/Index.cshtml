@model MaksGym.Models.ViewModels.CoachProfileViewModel

@{
    ViewData["Title"] = "Кабінет тренера";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3 p-4">
        <div class="card-body text-center">
            <h1 class="fw-bold text-primary mb-3">Привіт, @Model.Coach.User.FullName!</h1>
            <h4 class="fw-semibold text-secondary">Твої напрямки</h4>
        </div>

        <div class="row mt-4">
            @if (Model.Coach.Groups != null && Model.Coach.Groups.Any())
            {
                @foreach (var group in Model.Coach.Groups)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title text-primary fw-bold">
                                    @(group.GroupName ?? "Без назви")
                                </h5>
                                <p class="text-muted mb-2">
                                    Напрямок: <span class="badge bg-info text-dark">@group.Direction?.DirectionName ?? "-"</span>
                                </p>

                                <ul class="list-group list-group-flush">
                                    @if (group.Shedules != null && group.Shedules.Any())
                                    {
                                        @foreach (var shedules in group.Shedules)
                                        {
                                            <li class="list-group-item">
                                                <i class="bi bi-calendar-week me-2 text-primary"></i>
                                                День: <strong>@shedules.DayOfWeek</strong><br />
                                                <i class="bi bi-clock me-2 text-success"></i>
                                                Час: @shedules.StartTime.ToString(@"hh\:mm") - @shedules.EndTime.ToString(@"hh\:mm")
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="list-group-item text-muted">Немає розкладу</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted">
                    У тебе ще немає груп
                </div>
            }
        </div>
    </div>
</div>
