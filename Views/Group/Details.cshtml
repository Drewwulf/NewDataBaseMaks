@model MaksGym.Models.ViewModels.StudentsInGroupViewModel
@{
    var group = Model.NewGroup;
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-body">
            <h2 class="mb-3">@group.GroupName</h2>
            <p class="text-muted mb-1"><strong>Опис:</strong> @group.GroupDescription</p>
            <p class="mb-1"><strong>Тренер:</strong>>@(group.Coach?.User.FullName ?? "Немає тренера")</p>
            <p class="mb-3"><strong>Напрямок:</strong>@(group.Direction?.DirectionName ?? "Немає напрямку")</p>

            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад
                </a>
                <a asp-controller="Shedule" asp-action="Index" asp-route-groupId="@group.GroupsId"
                   class="btn btn-outline-primary">
                    <i class="bi bi-calendar-plus"></i> Додати графік занять
                </a>
            </div>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Додати студента</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddStudent" method="post">
                <input type="hidden" asp-for="GroupId" />
                <div class="mb-3">
                    <label asp-for="UserId" class="form-label fw-bold">Студент</label>
                    <select asp-for="UserId" class="form-control select2">
                        <option value="">-- Виберіть студента --</option>
                        @foreach (var student in Model.Students)
                        {
                            <option value="@student.StudentId">@student.User?.FullName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-person-plus"></i> Додати студента
                </button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-light">
            <h5 class="mb-0">Студенти в групі</h5>
        </div>
        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Ім'я студента</th>
                            <th scope="col" class="text-center">Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.StudentInGroup)
                        {
                            if (!student.IsDeleted)
                            {
                                <tr>
                                    <td>@student.StudentId</td>
                                    <td>@student.Student.User.FullName</td>
                                    <td class="text-center">
                                        <a asp-action="RemoveStudent"
                                           asp-route-groupId="@Model.GroupId"
                                           asp-route-studentId="@student.StudentId"
                                           class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-person-dash"></i> Видалити
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2({ placeholder: "Оберіть студента", allowClear: true });
        });
    </script>
}
