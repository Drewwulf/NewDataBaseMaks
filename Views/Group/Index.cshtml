@model MaksGym.Models.ViewModels.GroupViewModel

@{
    ViewData["Title"] = "Додати групу";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Додати групу</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="GroupName" class="form-label fw-bold"></label>
                            <input asp-for="GroupName" class="form-control" placeholder="Введіть назву групи" />
                            <span asp-validation-for="GroupName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GroupDescription" class="form-label fw-bold"></label>
                            <textarea asp-for="GroupDescription" class="form-control" rows="3" placeholder="Опишіть групу"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CoachId" class="form-label fw-bold"></label>
                            <select asp-for="CoachId" class="form-select">
                                <option value="">-- Виберіть тренера --</option>
                                @foreach (var coach in Model.Coaches)
                                {
                                    <option value="@coach.CoachId">@coach.User.FullName</option>
                                }
                            </select>
                            <span asp-validation-for="CoachId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DirectionId" class="form-label fw-bold"></label>
                            <select asp-for="DirectionId" class="form-select">
                                <option value="">-- Виберіть напрямок --</option>
                                @foreach (var direction in Model.Directions)
                                {
                                    <option value="@direction.DirectionId">@direction.DirectionName</option>
                                }
                            </select>
                            <span asp-validation-for="DirectionId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-plus-circle"></i> Додати
                            </button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Поле пошуку -->
    <div class="row mt-5 mb-3">
        <div class="col-md-6">
            <input type="text" id="searchGroup" class="form-control" placeholder="Пошук групи..." />
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h4 class="mb-0">Список груп</h4>
                </div>
                <div class="card-body p-3">
                    <div class="table-responsive">
                        <table id="groupsTable" class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Назва групи</th>
                                    <th scope="col">Опис</th>
                                    <th scope="col">Тренер</th>
                                    <th scope="col">Напрямок</th>
                                    <th scope="col" class="text-center">Дії</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var group in Model.Groups)
                                {
                                    <tr>
                                        <td>@group.GroupsId</td>
                                        <td>@group.GroupName</td>
                                        <td>@group.GroupDescription</td>
                                        <td>@(group.Coach?.User.FullName ?? "Немає тренера")</td>
                                        <td>@(group.Direction?.DirectionName ?? "Немає напрямку")</td>
                                        <td class="text-center">
                                            <a asp-action="Details" asp-route-id="@group.GroupsId"
                                               class="btn btn-outline-info btn-sm me-2">
                                                <i class="bi bi-eye"></i> Деталі
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@group.GroupsId"
                                               class="btn btn-outline-danger btn-sm"
                                               onclick="return confirm('Ви впевнені, що хочете видалити цю групу?');">
                                                <i class="bi bi-trash"></i> Видалити
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("searchGroup").addEventListener("keyup", function () {
            let value = this.value.toLowerCase();
            let rows = document.querySelectorAll("#groupsTable tbody tr");

            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                row.style.display = text.includes(value) ? "" : "none";
            });
        });
    </script>
}
