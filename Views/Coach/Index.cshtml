@model MaksGym.Models.ViewModels.CoachViewModel

@{
    ViewData["Title"] = "Додати тренера";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Додати тренера</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="NewCoach.UserId" class="form-label fw-bold">Користувач</label>
                            <select asp-for="NewCoach.UserId" class="form-select">
                                <option value="">-- Виберіть користувача --</option>
                                @foreach (var user in Model.Users)
                                {
                                    <option value="@user.Id">@user.FullName</option>
                                }
                            </select>
                            <span asp-validation-for="NewCoach.UserId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Фото</label>
                            <input type="file" name="PhotoFile" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-plus-circle"></i> Додати
                            </button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Поле пошуку -->
    <div class="row mt-5 mb-3">
        <div class="col-md-6">
            <input type="text" id="searchCoach" class="form-control" placeholder="Пошук тренера..." />
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h4 class="mb-0">Список тренерів</h4>
                </div>
                <div class="card-body p-3">
                    <div class="table-responsive">
                        <table id="coachesTable" class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Користувач</th>
                                    <th scope="col">Фото</th>
                                    <th scope="col" class="text-center">Дії</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var coach in Model.CoachList)
                                {
                                    if (!coach.IsDeleted)
                                    {
                                        <tr>
                                            <td>@coach.CoachId</td>
                                            <td>@coach.User.FullName</td>
                                            <td>
                                                <img src="@coach.PhotoPath" alt="Фото тренера"
                                                     class="rounded-circle shadow-sm"
                                                     style="width: 80px; height: 80px; object-fit: cover;" />
                                            </td>
                                            <td class="text-center">
                                                <a asp-action="Delete" asp-route-id="@coach.CoachId"
                                                   class="btn btn-outline-danger btn-sm"
                                                   onclick="return confirm('Ви впевнені, що хочете видалити цього тренера?');">
                                                    <i class="bi bi-trash"></i> Видалити
                                                </a>
                                                <a asp-action="Details" asp-route-id="@coach.CoachId"
                                                   class="btn btn-outline-info btn-sm">
                                                    <i class="bi bi-info-circle"></i> Деталі
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("searchCoach").addEventListener("keyup", function () {
            let value = this.value.toLowerCase();
            let rows = document.querySelectorAll("#coachesTable tbody tr");

            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                row.style.display = text.includes(value) ? "" : "none";
            });
        });
    </script>
}
